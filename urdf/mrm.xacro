<?xml version = "1.0" ?>


<robot name ="mrm" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- this is fixed -->
	<link name  = "base_link">
		<visual>
			<origin rpy = "0 0 0" xyz = "0 0 0"/>
			<geometry>
				<box size = "1 1 1" />
			</geometry>
		</visual>
	</link>

<!-- between the links there has to be a joint -->

	<joint name="base_link__link_01" type="revolute">
           <axis xyz="0 0 1" />
           <limit effort="1000.0" lower="-3.14" upper="0.5" velocity="0.5" /> <!--  The lower and upper values define by how much we can rotate.   -->
           <origin rpy="0 0 0" xyz="0 0 0.5" />
           <parent link="base_link" />
           <child link="link_01" />
    </joint>
           
	<link name  = "link_01">
		<visual>
			<origin rpy = "0 0 0" xyz = "0 0 0.2"/>
			<geometry>
				<cylinder radius  = "0.35" length = "0.4"/>
			</geometry>
		</visual>
	</link>


</robot>


 